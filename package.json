{
  "private": true,
  "name": "nativeui-monorepo",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./apps/* run dev",
    "build": "pnpm -r --filter ./packages/* run build",
    "lint": "pnpm -r lint || true",
    "release": "pnpm -r --filter @native-ui-org/primitives build && changeset publish",
    "test": "pnpm -r --filter @native-ui-org/primitives run test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@changesets/cli": "^2.27.1",
    "@react-native/babel-preset": "^0.81.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "18.3.3",
    "babel-jest": "^30.1.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "react-native-web": "^0.21.1",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.3",
      "typescript": "5.5.4",
      "react": "19.1.1",
      "react-dom": "19.1.1",
      "react-test-renderer": "19.1.1"
    },
    "public-hoist-pattern": [
      "*@types/react*",
      "react",
      "react-dom"
    ]
  }
}