{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "conventionalcommits",
            "infile": "packages/primitives/CHANGELOG.md"
        }
    },
    "git": {
        "tagName": "primitives@${version}",
        "commitMessage": "chore(release): primitives ${version}",
        "requireCleanWorkingDir": true,
        "push": true
    },
    "github": {
        "release": true,
        "releaseName": "primitives@${version}"
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "before:init": "echo Releasing @native-ui-org/primitivesâ€¦",
        "before:release": "pnpm --filter ./packages/primitives build"
    },
    "src": {
        "pkgFiles": [
            "packages/primitives/package.json",
            "package.json",
            "apps/*/package.json",
            "packages/*/package.json"
        ]
    }
}